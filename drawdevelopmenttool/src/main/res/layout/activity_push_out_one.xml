<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">




        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16px"
            android:text="@string/push_out_one"
            android:textColor="@color/black"
            android:textSize="40px" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:layout_marginBottom="24px"
        android:id="@+id/rv_look_content">
        <View
            android:layout_width="540px"
            android:layout_height="1px"
            android:background="@color/black"
            android:layout_alignTop="@id/iv_push_one"/>
        <View
            android:layout_width="540px"
            android:layout_height="1px"
            android:background="@color/black"
            android:layout_alignBottom="@id/iv_push_one"/>

        <View
            android:layout_width="1px"
            android:layout_height="880px"
            android:layout_alignLeft="@id/iv_push_one"
            android:background="@color/black"/>

        <View
            android:layout_width="1px"
            android:layout_height="880px"
            android:layout_alignRight="@id/iv_push_one"
            android:background="@color/black"/>
        <ImageView
            android:id="@+id/iv_push_one"
            android:layout_width="540px"
            android:layout_height="880px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_last_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8px"
            />

            <TextView
                android:id="@+id/tv_show_pager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_next_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8px"
            />
    </LinearLayout>






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_push_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="4px"
            android:layout_marginTop="10px"
            android:layout_gravity="center_horizontal"
            android:textSize="26px"
            android:text="@string/push_out" />
        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="50px"
            android:padding="4px"
            android:layout_marginTop="10px"
            android:layout_gravity="center_horizontal"
            android:textSize="26px"
            android:text="@string/cancel" />

    </LinearLayout>


</LinearLayout>
