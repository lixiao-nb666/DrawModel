<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <LinearLayout
        android:layout_width="500px"
        android:layout_height="51px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16px"
        android:background="@drawable/manuscripts_title">

        <TextView
            android:id="@+id/tv_manuscripts_date"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/manuscripts_date"
            android:textColor="@color/black"
            android:textSize="24px" />


        <TextView
            android:id="@+id/tv_manuscripts_auto"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/manuscripts_auto"
            android:textColor="@color/black"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_manuscripts_name"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/manuscripts_name"
            android:textColor="@color/black"
            android:textSize="24px" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_show_model"
        android:layout_width="46px"
        android:layout_height="41px"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20px"
        android:layout_marginRight="72px" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="26px"
        android:layout_marginTop="100px"
        android:layout_marginRight="26px" />

    <LinearLayout
        android:id="@+id/ll_show_pager"
        android:layout_width="230px"
        android:layout_height="70px"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10px"
        android:layout_marginBottom="33px"
        android:background="@drawable/lh_pager_numb_bg"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_last_pager"
            android:layout_width="55px"
            android:layout_height="55px"
            android:scaleType="fitCenter"
            android:layout_marginLeft="6px"
            android:padding="8px"
            />

        <TextView
            android:id="@+id/tv_pager_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/lh_pager_tv"
            android:textSize="25px"
            android:text="1/1"
            android:gravity="center" />

        <ImageView
            android:id="@+id/iv_next_pager"
            android:layout_width="55px"
            android:layout_height="55px"
            android:scaleType="fitCenter"
            android:layout_marginRight="6px"
            android:padding="8px" />

    </LinearLayout>
</RelativeLayout>
