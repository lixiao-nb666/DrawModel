<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_select_add_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/dialog_select_add_type"
        android:textColor="@color/black"
        android:textSize="40px" />

    <TextView
        android:id="@+id/tv_fast_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_select_add_type"
        android:layout_gravity="center_horizontal"
        android:text="@string/dialog_fast_create"
        android:textColor="@color/black"
        android:textSize="20px" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_select_add_type"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fast_create"
        android:layout_gravity="center_horizontal" />


    <Button
        android:id="@+id/bt_select_add_type_cancel"
        android:layout_width="200px"
        android:layout_height="60px"
        android:layout_below="@id/rv_select_add_type"
        android:layout_gravity="right"
        android:layout_marginTop="6px"
        android:background="@drawable/manuscripts_title"
        android:text="@string/cancel" />
</LinearLayout>
