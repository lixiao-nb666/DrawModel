<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_manuscripts_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="44px"
    android:layout_marginRight="44px"
    android:layout_marginBottom="100px"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/iv_manuscripts_content_bg"
            android:layout_width="302px"
            android:layout_height="302px"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginRight="20px"
            android:scaleType="fitCenter"
            android:padding="20px"
            android:layout_alignParentRight="true" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_manuscripts_content_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25px"
        android:maxLines="2"
        android:textColor="@color/manuscripts_content_name_tv"
        android:textSize="27px" />

    <TextView
        android:id="@+id/tv_manuscripts_content_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4px"
        android:textColor="@color/manuscripts_content_time_tv"
        android:textSize="19px" />

</LinearLayout>
