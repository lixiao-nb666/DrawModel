<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="372px"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33px"
        android:layout_marginTop="10px"
        android:textColor="@color/lh_pager_tv"
        android:text="@string/select_eraser"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="8px"
        android:layout_marginRight="8px"
        android:layout_marginTop="8px"
        android:layout_marginBottom="8px"
        android:background="@color/gray3"/>
    <LinearLayout
        android:layout_marginTop="8px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="33px"
            android:layout_marginTop="10px"
            android:textColor="@color/lh_pager_tv"
            android:text="@string/select_eraser_type"/>

            <ImageView
                android:id="@+id/iv_type1"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/note_book_btn_bg"
                android:padding="8px" />
            <ImageView
                android:id="@+id/iv_type2"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/note_book_btn_bg"
                android:padding="8px" />

            <ImageView
                android:id="@+id/iv_type3"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/note_book_btn_bg"
                android:padding="8px" />

        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="6px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="33px"
            android:layout_marginTop="10px"
            android:textColor="@color/lh_pager_tv"
            android:text="@string/select_eraser_size"/>

        <ImageView
            android:id="@+id/iv_small"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/note_book_btn_bg"
            android:padding="8px" />
        <ImageView
            android:id="@+id/iv_middle"
            android:layout_width="58px"
            android:layout_height="58px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/note_book_btn_bg"
            android:padding="8px" />
        <ImageView
            android:id="@+id/iv_big"
            android:layout_width="68px"
            android:layout_height="68px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/note_book_btn_bg"
            android:padding="8px" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="13px"
        android:layout_marginRight="10px"
        android:layout_marginBottom="6px"
        android:orientation="horizontal">




        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="26px"
            android:padding="10px"
            android:textColor="@color/lh_pager_tv"
            android:text="@string/cancel"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:textSize="28px"
            android:padding="10px"
            android:textColor="@color/lh_pager_tv"
            android:text="@string/ok"/>
    </LinearLayout>




</LinearLayout>
