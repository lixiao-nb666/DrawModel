<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="372px"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33px"
        android:layout_marginTop="10px"
        android:textColor="@color/lh_pager_tv"
        android:text="@string/select_pen"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="8px"
        android:layout_marginRight="8px"
        android:layout_marginTop="8px"
        android:layout_marginBottom="8px"
        android:background="@color/gray3"/>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="20px"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_ball_pen"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:padding="8px" />

            <ImageView
                android:id="@+id/iv_brush_pen"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:padding="8px" />

            <ImageView
                android:id="@+id/iv_pen"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:padding="8px" />


            <ImageView
                android:id="@+id/iv_pencil"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:visibility="gone"
                android:padding="8px" />

        </LinearLayout>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginTop="16px"
            android:background="@color/black"
            android:layout_marginBottom="16px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:layout_marginTop="10px"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/lh_pager_tv"
                android:text="@string/select_pen_size_bt"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_small"
                    android:layout_width="48px"
                    android:layout_height="48px"
                    android:layout_marginLeft="20px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px" />
                <ImageView
                    android:id="@+id/iv_middle"
                    android:layout_width="58px"
                    android:layout_height="58px"
                    android:layout_marginLeft="20px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    />
                <ImageView
                    android:id="@+id/iv_big"
                    android:layout_width="68px"
                    android:layout_height="68px"
                    android:layout_marginLeft="20px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    />



            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:layout_marginTop="10px"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/lh_pager_tv"
                android:text="@string/select_pen_size_seek"/>

            <SeekBar
                android:id="@+id/sb_pen_size"
                android:layout_width="300px"
                android:layout_height="22px"
                android:layout_margin="30px"
                android:layout_gravity="center_horizontal"
                android:max="20"
                android:thumb="@drawable/pen_size_select_icon" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:layout_marginTop="10px"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/lh_pager_tv"
                android:text="@string/select_pen_numb_seek"/>
            <SeekBar
                android:id="@+id/sb_pen_numb"
                android:layout_width="300px"
                android:layout_height="22px"
                android:layout_margin="30px"
                android:layout_gravity="center_horizontal"
                android:max="10"
                android:thumb="@drawable/pen_size_select_icon" />



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10px"
        android:layout_marginBottom="6px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="33px"
            android:padding="10px"
            android:textColor="@color/lh_pager_tv"
            android:text="@string/cancel"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:textSize="33px"
            android:padding="10px"
            android:visibility="gone"
            android:textColor="@color/lh_pager_tv"
            android:text="@string/ok"/>
    </LinearLayout>




</LinearLayout>
