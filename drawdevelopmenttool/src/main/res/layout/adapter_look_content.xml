<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15px"
    >

        <RelativeLayout
            android:id="@+id/rl_item_look_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <View
            android:layout_width="324px"
            android:layout_height="1px"
            android:background="@color/black"
            android:layout_alignTop="@id/iv_item_look_content"/>
        <View
            android:layout_width="324px"
            android:layout_height="1px"
            android:background="@color/black"
            android:layout_alignBottom="@id/iv_item_look_content"/>

        <View
            android:layout_width="1px"
            android:layout_height="550px"
            android:layout_alignLeft="@id/iv_item_look_content"
            android:background="@color/black"/>

        <View
            android:layout_width="1px"
            android:layout_height="550px"
            android:layout_alignRight="@id/iv_item_look_content"
            android:background="@color/black"/>
        <ImageView
            android:id="@+id/iv_item_look_content"
            android:layout_width="324px"
            android:layout_height="550px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        </RelativeLayout>

</LinearLayout>
