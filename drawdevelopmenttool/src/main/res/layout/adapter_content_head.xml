<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content_head_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_content_head_item_close"
        android:layout_width="66px"
        android:layout_height="66px"
        android:layout_centerVertical="true"
        android:background="@drawable/bt_close" />


    <TextView
        android:id="@+id/tv_content_head_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="66px"
        android:layout_marginRight="66px"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="24px" />

</RelativeLayout>
