<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="372px"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33px"
        android:layout_marginTop="10px"
        android:textColor="@color/lh_pager_tv"
        android:text="@string/select_color"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="8px"
        android:layout_marginRight="8px"
        android:layout_marginTop="8px"
        android:layout_marginBottom="8px"
        android:background="@color/gray3"/>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_black"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/note_book_btn_bg"
                android:padding="8px" />
            <ImageView
                android:id="@+id/iv_white"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/note_book_btn_bg"
                android:padding="8px" />
            <ImageView
                android:id="@+id/iv_gray"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/note_book_btn_bg"
                android:padding="8px" />
            <ImageView
                android:id="@+id/iv_red"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/note_book_btn_bg"
                android:padding="8px" />

            <ImageView
                android:id="@+id/iv_orange"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/note_book_btn_bg"
                android:padding="8px" />

        </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_yellow"
            android:layout_width="68px"
            android:layout_height="68px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/note_book_btn_bg"
            android:padding="8px" />
        <ImageView
            android:id="@+id/iv_green"
            android:layout_width="68px"
            android:layout_height="68px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/note_book_btn_bg"
            android:padding="8px" />
        <ImageView
            android:id="@+id/iv_ching"
            android:layout_width="68px"
            android:layout_height="68px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/note_book_btn_bg"
            android:padding="8px" />
        <ImageView
            android:id="@+id/iv_blue"
            android:layout_width="68px"
            android:layout_height="68px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/note_book_btn_bg"
            android:padding="8px" />

        <ImageView
            android:id="@+id/iv_purple"
            android:layout_width="68px"
            android:layout_height="68px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/note_book_btn_bg"
            android:padding="8px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10px"
        android:layout_marginBottom="6px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_select_color_senior"
            android:layout_width="88px"
            android:layout_height="88px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:padding="8px" />

        <ImageView
            android:id="@+id/iv_select_color_circle"
            android:layout_width="88px"
            android:layout_height="88px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:padding="8px" />


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="33px"
            android:padding="10px"
            android:textColor="@color/lh_pager_tv"
            android:text="@string/close"/>

<!--        <TextView-->
<!--            android:id="@+id/tv_ok"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="16px"-->
<!--            android:layout_gravity="bottom"-->
<!--            android:textSize="33px"-->
<!--            android:padding="10px"-->
<!--            android:textColor="@color/lh_pager_tv"-->
<!--            android:text="@string/ok"/>-->
    </LinearLayout>




</LinearLayout>
