<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="153px"
        android:text="@string/head_favorites"
        android:textColor="@color/black"
        android:textSize="61px" />

    <View
        android:id="@+id/v_line_title"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_head_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="53px"
        android:layout_marginTop="28px"
        android:layout_marginRight="53px"
        android:background="@color/gray" />

    <include
        layout="@layout/fragment_head_show_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/v_line_title" />


</RelativeLayout>
