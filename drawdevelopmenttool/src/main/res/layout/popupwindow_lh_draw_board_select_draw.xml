<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="372px"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33px"
        android:layout_marginTop="10px"
        android:textColor="@color/lh_pager_tv"
        android:text="@string/select_area"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="8px"
        android:layout_marginRight="8px"
        android:layout_marginTop="8px"
        android:layout_marginBottom="8px"
        android:background="@color/gray3"/>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40px"
            android:layout_marginRight="10px">

            <ImageView
                android:id="@+id/iv_delect"
                android:layout_width="108px"
                android:layout_height="108px"
                android:background="@drawable/note_book_btn_bg"
                android:padding="8px" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:layout_gravity="center_horizontal"
                android:text="@string/area_delect"/>
        </LinearLayout>

        <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginTop="6px"
                android:layout_marginBottom="6px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@color/gray3"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10px"
            android:layout_marginRight="40px">

            <ImageView
                android:id="@+id/iv_move"
                android:layout_width="108px"
                android:layout_height="108px"
                android:background="@drawable/note_book_btn_bg"
                android:padding="8px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:layout_gravity="center_horizontal"
                android:text="@string/area_move"/>

        </LinearLayout>





        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="11px"
        android:layout_marginRight="10px"
        android:layout_marginBottom="6px"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="33px"
            android:padding="10px"
            android:textColor="@color/lh_pager_tv"
            android:text="@string/cancel"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_gravity="bottom"
            android:textSize="33px"
            android:padding="10px"
            android:textColor="@color/lh_pager_tv"
            android:text="@string/ok"/>
    </LinearLayout>




</LinearLayout>
